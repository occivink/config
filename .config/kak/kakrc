try %{ set global filetree_find_cmd 'elvish -c "use find; find:find &dirs=\$false | each [f]{ echo \$f }"' }
try %{ set global termcmd 'kitty sh -c' }

def -hidden text-object-indented-paragraph %{
    eval -save-regs '^' %{
        exec -draft -save-regs '' '<a-i>pZ'
        exec '<a-i>i<a-z>i'
    }
}
